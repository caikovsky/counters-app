<resources>
    <!-- Base application theme. -->
    <style name="Theme.CountersNormal" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/gray</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>
        <item name="android:textColorTertiary">@color/light_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
    </style>

    <style name="Theme.CountersWelcome" parent="Theme.CountersNormal">
        <item name="android:windowBackground">@color/welcome_background</item>
    </style>

    <style name="Theme.MainApplication" parent="Theme.CountersNormal">
        <item name="android:windowBackground">@color/main_background</item>
    </style>

    <style name="Theme.ProgressDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:indeterminateTint">?attr/colorPrimary</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Rounded" parent="Theme.CountersNormal">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CreateCounterButton" parent="Theme.CountersNormal">
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="TextInputLayout" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="android:textColorHint">?attr/colorPrimary</item>
        <item name="colorAccent">?attr/colorPrimary</item>
        <item name="colorControlNormal">?attr/colorPrimary</item>
        <item name="colorControlActivated">?attr/colorPrimary</item>
    </style>
</resources>
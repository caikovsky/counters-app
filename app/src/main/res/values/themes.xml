<resources>
    <!-- Base application theme. -->
    <style name="Theme.CountersNormal" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/gray</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>
        <item name="android:textColorTertiary">@color/light_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <item name="android:colorAccent">?attr/colorPrimary</item>
        <item name="colorControlActivated">?attr/colorPrimary</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="background">@android:color/transparent</item>
        <item name="backgroundTint">@color/button_state</item>
        <item name="android:textColor">@color/button_state</item>
    </style>

    <style name="Theme.CountersWelcome" parent="Theme.CountersNormal">
        <item name="android:windowBackground">@color/welcome_background</item>
    </style>

    <style name="Theme.MainApplication" parent="Theme.CountersNormal">
        <item name="android:windowBackground">@color/main_background</item>
        <item name="android:background">@color/main_background</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:background">@color/welcome_background</item>
    </style>

    <style name="Theme.ProgressDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:indeterminateTint">?attr/colorPrimary</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Rounded" parent="Theme.CountersNormal">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CreateCounterButton" parent="Theme.CountersNormal">
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="TextInputLayout" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="android:textColorHint">?attr/colorPrimary</item>
        <item name="colorAccent">?attr/colorPrimary</item>
        <item name="colorControlNormal">?attr/colorPrimary</item>
        <item name="colorControlActivated">?attr/colorPrimary</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="background">?attr/colorSecondary</item>
        <item name="android:background">@color/white</item>
        <item name="queryHint">@string/search_counters</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="iconifiedByDefault">false</item>
        <item name="android:queryHint">@string/search_counters</item>
        <item name="closeIcon">@drawable/ic_close</item>
        <item name="android:closeIcon">@drawable/ic_close</item>
        <item name="colorControlActivated">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorSecondary">?attr/colorOnSecondary</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/orange</item>
        <item name="android:colorPrimary">?attr/colorPrimary</item>
        <item name="android:colorAccent">?attr/colorPrimary</item>
        <item name="colorAccent">?attr/colorPrimary</item>
    </style>

    <style name="ExampleDescriptionText">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ExampleHeaderText">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="fontWeight">500</item>
        <item name="android:textSize">17sp</item>
    </style>

</resources>